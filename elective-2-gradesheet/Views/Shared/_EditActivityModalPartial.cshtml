<div class="modal fade" id="editActivityModal" tabindex="-1" aria-labelledby="editActivityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editActivityModalLabel">Edit Activity Score</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateActivity" method="post">
                    <input type="hidden" id="modal-activity-id" name="activityId" />
                    <input type="hidden" id="modal-student-id" name="studentId" />
                    <div class="mb-3">
                        <label for="modal-activity-name" class="form-label">Activity Name</label>
                        <input type="text" class="form-control" id="modal-activity-name" name="activityName" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="modal-total-items" class="form-label">Total Items</label>
                        <input type="number" class="form-control" id="modal-total-items" name="totalItems" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="modal-score" class="form-label">Score</label>
                        <input type="number" class="form-control" id="modal-score" name="score" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
