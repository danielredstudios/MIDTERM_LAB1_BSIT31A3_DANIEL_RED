@using elective_2_gradesheet.Models
@model RecordsViewModel

@{
    ViewData["Title"] = "Student Records";
}

<h1>Student Records</h1>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Records" method="get" id="filterForm">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <input type="text" name="searchString" class="form-control" placeholder="Search by name..." value="@ViewData["CurrentFilter"]" id="searchString">
                </div>
                <div class="col-md-3">
                    <select name="sectionId" class="form-select" asp-items="ViewBag.Sections" id="sectionId">
                        <option value="">All Sections</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="period" class="form-select" asp-items="ViewBag.Periods" id="period">
                        <option value="">All Periods</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <button type="button" class="btn btn-secondary" id="resetFilterBtn">Reset</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Section</th>
            <th>Prelim Grade</th>
            <th>Midterm Grade</th>
            <th>Finals Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    <!-- Added tooltip attributes to the anchor tag -->
                    <a asp-action="StudentProfile" asp-route-id="@item.Id" data-bs-toggle="tooltip" title="Click to Open Profile">
                        @item.FullName
                    </a>
                </td>
                <td>@item.Section.Name</td>
                <td>@item.PrelimGrade</td>
                <td>@item.MidtermGrade</td>
                <td>@item.FinalsGrade</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/views/records.js" asp-append-version="true"></script>
}
